<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/partidaNomer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:minHeight="50dp"
            android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
            android:paddingLeft="?android:attr/listPreferredItemPaddingLeft"
            android:paddingRight="?android:attr/listPreferredItemPaddingRight"
            android:paddingStart="?android:attr/listPreferredItemPaddingStart"
            android:text="100010120"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceListItemSmall"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/partidaPropertyRefs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1.5"
            android:minHeight="50dp"
            android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
            android:paddingLeft="?android:attr/listPreferredItemPaddingLeft"
            android:paddingRight="?android:attr/listPreferredItemPaddingRight"
            android:paddingStart="?android:attr/listPreferredItemPaddingStart"
            android:text="Рапл-011:Оф.02"
            android:textAppearance="?android:attr/textAppearanceListItemSmall"
            android:textSize="10sp" />


        <TextView
            android:id="@+id/partidaBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:minHeight="50dp"
            android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
            android:paddingLeft="?android:attr/listPreferredItemPaddingLeft"
            android:paddingRight="?android:attr/listPreferredItemPaddingRight"
            android:paddingStart="?android:attr/listPreferredItemPaddingStart"
            android:text="937.15 lv."
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceListItemSmall"
            android:textSize="15sp"
            android:layout_weight="0.12" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/inovice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test Two"
            android:layout_marginLeft="42dp"/>


    </LinearLayout>

</LinearLayout>